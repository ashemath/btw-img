#!/bin/sh

BATCH=0;
SCENARIO=$1;
if [ $SCENARIO = "launch" ] || [ $SCENARIO = "clean" ] ; then
    CONFIG=$2;
fi

if [ $CONFIG = "all" ] ; then
    BATCH=1;
    echo "Batch detected!";
fi

if [ ! -f configs/$CONFIG.ini ] && [ $BATCH -eq 0 ]; then
    echo "Config doesn't exist under configs for $2."
    exit 1;
fi

# Launch a singular VM
if [ $SCENARIO = "launch" ] && [ $BATCH -eq 0 ]; then
    ./scripts/prepare-cloud-img.sh
    ./scripts/launch-virtual-machine.sh -c configs/$CONFIG.ini;
    exit 0;
# Clean a singular VM
elif [ $SCENARIO = "clean" ] && [ $BATCH -eq 0 ]; then
    ./scripts/prepare-cloud-img.sh
    ./scripts/cleanup.sh -c configs/$CONFIG.ini;
    exit 0;
# Launch all VMs
elif [ $SCENARIO = "launch" ] && [ $BATCH -eq 1 ]; then
    for config in configs/*; do ./scripts/launch-virtual-machine.sh -c $config; done;
    exit 0;
# Clean all VMs
elif [ $SCENARIO = "clean" ] && [ $BATCH -eq 1 ]; then
    for config in configs/*; do ./scripts/cleanup.sh -c $config; done;
    exit 0;
fi
